<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" style="-fx-background-color: #34b4eb;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Controllers.UserSignUpController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="User Sign-Up" />

    <TextField fx:id="usernameField" maxWidth="300" promptText="Username" />
    <PasswordField fx:id="passwordField" maxWidth="300" promptText="Password" />
    <PasswordField fx:id="confirmPasswordField" maxWidth="300" promptText="Confirm Password" />

    <Button fx:id="signUpButton" style="-fx-background-color: #007bff; -fx-text-fill: white;" text="Sign Up" />

    <Label fx:id="messageLabel" style="-fx-text-fill: red;" text="" />
   <Hyperlink onAction="#toLogin" text="Login to Account" textFill="#3b6900" />
</VBox>
