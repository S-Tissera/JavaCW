<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="330.0" prefWidth="400" spacing="10" style="-fx-background-color: #34b4eb;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Controllers.DeleteUserController">
    <children>
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Delete User" />

        <ComboBox fx:id="userComboBox" prefWidth="300" promptText="Select a User" />

        <TextArea fx:id="userDetailsArea" editable="false" prefHeight="150" prefWidth="300" promptText="User details will be shown here." wrapText="true" />

        <Button fx:id="deleteButton" style="-fx-background-color: #dc143c; -fx-text-fill: white;" text="Delete User" />

        <Label fx:id="statusLabel" style="-fx-text-fill: red;" text="" />
      <Button mnemonicParsing="false" onAction="#toAdminOptions" style="-fx-background-color: #a3bec9;" text="Back" />
    </children>
</VBox>
