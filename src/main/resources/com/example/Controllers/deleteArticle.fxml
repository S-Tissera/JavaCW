<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20; -fx-background-color: #34b4eb;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Controllers.DeleteArticleController">
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Delete Article" />
    <ComboBox fx:id="titleComboBox" prefWidth="300" promptText="Select an article" />
    <TextArea fx:id="articleDetailsArea" editable="false" prefHeight="200" prefWidth="400" wrapText="true" />
    <Button fx:id="deleteButton" style="-fx-background-color: #dc5050; -fx-text-fill: white;" text="Delete Article" />
    <Label fx:id="statusLabel" style="-fx-text-fill: red;" text="" />
   <Button mnemonicParsing="false" onAction="#toAdminOptions" style="-fx-background-color: #a3bec9;" text="Back" />
</VBox>
