<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" style="-fx-background-color: #34b4eb;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Controllers.UpdateArticleController">
    <children>
        <!-- Title Label -->
        <Label layoutX="240.0" layoutY="22.0" text="Update Article">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Label>

        <!-- Article Title Dropdown (ComboBox) -->
        <Label layoutX="70.0" layoutY="75.0" text="Select Article:" />
        <ComboBox fx:id="titleComboBox" layoutX="170.0" layoutY="71.0" prefWidth="357.0" />

        <!-- Article Title -->
        <Label layoutX="70.0" layoutY="120.0" text="Article Title:" />
        <TextField fx:id="titTXT" layoutX="170.0" layoutY="116.0" prefWidth="357.0" promptText="Enter article title" />

        <!-- Article Source -->
        <Label layoutX="96.0" layoutY="150.0" text="Source:" />
        <TextField fx:id="titTXT2" layoutX="170.0" layoutY="147.0" prefWidth="357.0" promptText="Enter source" />

        <!-- Article Content -->
        <Label layoutX="70.0" layoutY="180.0" text="Article Content:" />
        <TextArea fx:id="artTXT" layoutX="70.0" layoutY="200.0" prefHeight="140.0" prefWidth="457.0" promptText="Paste or type article content here" />

        <!-- Identified Category -->
        <Label layoutX="70.0" layoutY="353.0" text="Category:" />
        <TextField fx:id="titTXT1" editable="false" layoutX="170.0" layoutY="348.0" prefWidth="357.0" promptText="Identified category will appear here" />

        <!-- Buttons -->
        <Button fx:id="chooseFileButton" layoutX="170.0" layoutY="391.0" onAction="#chooseFile" style="-fx-background-color: #a3bec9;" text="Choose File" />
        <Button fx:id="updateButton" layoutX="486.0" layoutY="391.0" onAction="#updateArticle" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Update Article" />
      <Button fx:id="chooseFileButton1" layoutX="14.0" layoutY="14.0" onAction="#toAdminOptions" style="-fx-background-color: #a3bec9;" text="Back" />
    </children>
</AnchorPane>
