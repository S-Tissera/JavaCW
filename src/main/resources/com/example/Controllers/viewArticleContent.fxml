<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #34b4eb;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Controllers.ViewArticleContentController">
    <children>
        <!-- Title -->
        <Label layoutX="200.0" layoutY="22.0" text="Article Content">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Label>

        <!-- Article Title -->
        <Label layoutX="50.0" layoutY="75.0" text="Title:" />
        <TextField fx:id="titleField" editable="false" layoutX="150.0" layoutY="71.0" prefWidth="400.0" />

        <!-- Article Source -->
        <Label layoutX="50.0" layoutY="120.0" text="Source:" />
        <TextField fx:id="sourceField" editable="false" layoutX="150.0" layoutY="116.0" prefWidth="400.0" />

        <!-- Article Content -->
        <Label layoutX="50.0" layoutY="165.0" text="Content:" />
        <TextArea fx:id="contentArea" editable="false" layoutX="50.0" layoutY="190.0" prefHeight="160.0" prefWidth="500.0" />
      <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#toAdminOptions" style="-fx-background-color: #a3bec9;" text="Back" />
    </children>
</AnchorPane>
